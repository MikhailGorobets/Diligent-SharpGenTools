<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
        <EnablePackageValidation>true</EnablePackageValidation>
        <Description>Support classes for code generated by SharpGen.</Description>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <CheckEolTargetFramework>false</CheckEolTargetFramework>
        <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
        <EnableNETAnalyzers>true</EnableNETAnalyzers>
        <AnalysisLevel>preview</AnalysisLevel>
        <PackageId>Diligent-SharpGen.Runtime</PackageId>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="System.Memory" Condition = "'$(TargetFramework)' != 'net6.0'" />
        <PackageReference Include="Nullable" Condition="'$(TargetFramework)' != 'net6.0'" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="Mapping.xml" PackagePath="build" />
        <Content Include="$(PackageId).props" PackagePath="build;buildMultiTargeting" />
        <Compile Remove="Shim/Formattable*" Condition="'$(TargetFramework)' != 'net45'" />
        <Compile Remove="Shim/ReferenceEqualityComparer.cs"  Condition="'$(TargetFramework)' == 'net6.0'"  />
    </ItemGroup>

</Project>
